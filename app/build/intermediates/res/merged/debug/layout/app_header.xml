<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytHeader"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.0"
    android:minHeight="270dp"
    android:background="@color/App_Header"
    android:gravity="center"
    android:windowSoftInputMode="adjustPan"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.8"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:scaleType="fitCenter"
             />

        <LinearLayout
            android:id="@+id/linearHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.0"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="3dp" >

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:textColor="@color/App_Details"
                android:textSize="@dimen/txt_app_labels_large_fontsize" />

            <TextView
                android:id="@+id/txtHeadershot"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:textColor="@color/App_Details"
                android:textSize="@dimen/txt_app_labels_normal_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginRight="3dp"
            android:background="@drawable/back"
            android:src="@drawable/ic_action_search" />
        
        <ImageView
            android:id="@+id/imgChangeCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginRight="3dp"
            android:background="@drawable/back"
            android:src="@drawable/ic_action_place" />
        
        <ImageView
            android:id="@+id/imgOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1.5"
            android:background="@drawable/back"
            android:src="@drawable/ic_action_overflow" />
         <ImageView
            android:id="@+id/imgHelp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1.5"
            android:visibility="gone"
            android:background="@drawable/back"
            android:src="@android:drawable/ic_dialog_info" />

        <LinearLayout
            android:id="@+id/linearSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9.0"
            android:orientation="horizontal"
            android:visibility="gone" >

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"
                android:ems="10"
                android:hint="Search content" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@android:drawable/btn_dialog" />
        </LinearLayout>
    </LinearLayout>

   

</LinearLayout>